package login;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

public class User {
    
    // Ponto 1: Início
    public Connection conectarBD() { // Ponto 2: conectarBD()
        Connection conn = null; 
        try {
            Class.forName("com.mysql.DriverManager").newInstance();
            String url = "jdbc:mysql://127.0.0.1/test?user=lopes&password=123";
            conn = DriverManager.getConnection(url);
        } catch (Exception e) {
            // Exceção tratada de forma genérica
        }
        return conn; // Retorno da conexão
    }

    public boolean verificarUsuario(String login, String senha) {
        // Ponto 3: Construção de string SQL
        String sql = ""; 
        Connection conn = conectarBD(); 
        sql += "select nome from usuarios "; 
        sql += "where login = '" + login + "' "; 
        sql += "and senha = '" + senha + "';"; 
        
        try {
            Statement st = conn.createStatement();
            // Ponto 4: Executar consulta SQL
            ResultSet rs = st.executeQuery(sql); 
            
            // Ponto 5: Decisão: if (rs.next())
            if (rs.next()) {
                result = true;
                nome = rs.getString("nome");
            } else {
                result = false;
            }
        } catch (Exception e) {
            // Tratamento de exceção genérico
        }
        
        // Ponto 6: Retorno de result
        return result;
    }
}
